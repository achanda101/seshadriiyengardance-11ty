<div class="content slanted-div default-bg right-facing">
  <div class="multi-row-section container">
    <div class="multi-column-section wrap-on-small">
      <div class="contact-form">
        <form
          id="contact"
          name="contact"
          method="POST"
          data-netlify-recaptcha="true"
          data-netlify="true"
        >
          <input type="hidden" name="form-name" value="contact" />
          <label for="name">
            <strong>Name</strong>
          </label>
          <input
            type="text"
            id="name"
            name="name"
            size="30"
            required="required"
          />
          <label for="email">
            <strong>Email</strong>
          </label>
          <input
            type="email"
            id="email"
            name="email"
            size="30"
            required="required"
            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
          />
          <label for="phone">
            <strong>Contact Number</strong>
          </label>
          <input type="text" id="phone" name="phone" size="30" />
          <label for="subject">
            <strong>Subject</strong>
          </label>
          <input
            type="text"
            id="subject"
            name="subject"
            size="30"
            required="required"
          />
          <label for="message">
            <strong>Message</strong>
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            cols="36"
            required="required"
          ></textarea>
          <div data-netlify-recaptcha="true"></div>
          <button
            type="submit"
            form="contact"
            value="Send"
            class="button --gold"
          >
            Send
          </button>
        </form>
      </div>
